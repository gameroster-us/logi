<section class="elements-section">
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg mx-auto">
        <div class="card my-5 shadow">
          <div class="card-body">
            <div class="row">
              <div class="col">
                <h3>New Category</h3>
              </div>
              <div class="col-md-1 text-right">
                <%= link_to admin_categories_path, class: "btn btn-outline-primary", toggle: 'tooltip', placement: 'top', title: 'Back' do %>
                  <i class='bi bi-arrow-left' aria-hidden='true'></i>
                <% end %>
              </div>
            </div><br>
            <%= form_for @category, url: admin_categories_path, method: :post do |f| %>
              <% if @category.errors.any? %>
                <div id="error_explanation">
                  <div class="alert alert-danger">
                    The form contains <%= pluralize(@category.errors.count, "error") %>.
                  </div>
                  <ul>
                  <% @category.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>
              <%= render 'form', :f => f %>
              <div class="row justify-content-end">  
                <div class="col-md-2 activity-button">
                  <%= link_to "Cancel", admin_categories_path, class: "btn btn-lg btn-outline-danger btn-block", toggle: 'tooltip', placement: 'top', title: 'Cancel' %>
                </div>
                <div class="col-md-2 activity-button">
                  <%= f.submit "Create", class: "btn btn-lg btn-outline-primary btn-block", toggle: 'tooltip', placement: 'top', title: 'Create' %>
                </div>
              </div><br/>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>